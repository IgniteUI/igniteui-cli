{
	"compilerOptions": {
		"baseUrl": ".",
		"target": "ES6",
		"module": "CommonJS",
		"esModuleInterop": true,
		"moduleResolution": "Node16",
		"sourceMap": true,
		"paths": {
			"@igniteui/cli-core": [
				"./packages/core"
			],
			"@igniteui/angular-templates": [
				"./packages/igx-templates"
			],
			"@igniteui/angular-schematics": [
				"./packages/ng-schematics"
			],
			"igniteui-cli": [
				"./packages/cli"
			]
		}
	},
	"exclude": [
		"output",
		"**/files/*",
		"packages/cli/**/files/*",
		"packages/cli/templates/quickstart/angular",
		"node_modules"
	]
}
