// Place your settings in this file to overwrite default and user settings.
{
	"typescript.tsdk": "./node_modules/typescript/lib",
	"editor.insertSpaces": false,
	"editor.detectIndentation": false,
	"files.exclude": {
		"lib/**/*.js.map": true,
		"lib/**/*.js": {"when": "$(basename).ts"},
		"packages/**/*.js.map": true,
		"packages/**/*.js": {"when": "$(basename).ts"},
		"scripts/**/*.js.map": true,
		"scripts/**/*.js": {"when": "$(basename).ts"},
		"spec/**/*.js.map": true,
		"spec/**/*.js": {"when": "$(basename).ts"},
		"templates/**/*.js.map": true,
		"templates/**/*.js": {"when": "$(basename).ts"},
		"migrations/**/*.js.map": true,
		"migrations/**/*.js": {"when": "$(basename).ts"},
		"schematics/**/*.js.map": true,
		"schematics/**/*.js": {"when": "$(basename).ts"}
	},
	"tslint.exclude": [ 
		"**/files/**/*.ts",
		"./output/**/*.ts"
	]
}