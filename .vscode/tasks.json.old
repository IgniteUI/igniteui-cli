{
	// See https://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "0.1.0",
	"command": "npm",
	"isShellCommand": true,
	"suppressTaskName": true,
	"tasks": [
        {
        // Build task, Ctrl+Shift+B
        // "npm run build"
        "taskName": "build",
        "isBuildCommand": true,
        "args": ["run", "build"]
        },
        {
        // Test task, Ctrl+Shift+T
        // "npm test"
        "taskName": "test",
        "isTestCommand": true,
        "args": ["test"]
        }
    ]
}