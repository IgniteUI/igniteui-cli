# ignore local runs output
/output/**
!output/.gitkeep

# test coverage
/coverage
/.nyc_output

# base and sub-package installs
**/node_modules

# ignore compiled files in packages
/packages/**/*.js.map
/packages/**/*.js
/scripts/**/*.js.map
/scripts/**/*.js
/spec/**/*.js.map
/spec/**/*.js

# compiled config schema
packages/core/config/Config.schema.json

# unignore cli bin executable
!packages/cli/bin/*.js

# unignore all template files
!packages/igx-templates/**/files/**/*
!packages/cli/templates/jquery/**/files/**/*
!packages/cli/templates/angular/**/files/**/*
!packages/cli/templates/react/**/files/**/*

# Misc
npm-debug.log*
yarn-error.log*

# Mac OSX Finder files.
**/.DS_Store
.DS_Store