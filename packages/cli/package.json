{
  "name": "igniteui-cli",
  "type": "module",
  "version": "12.0.5",
  "description": "CLI tool for creating Ignite UI projects",
  "keywords": [
    "CLI",
    "Ignite UI"
  ],
  "author": "Infragistics",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/IgniteUI/igniteui-cli.git",
    "directory": "packages/cli"
  },
  "bin": {
    "ig": "bin/execute.js",
    "igniteui": "bin/execute.js"
  },
  "bugs": {
    "url": "https://github.com/IgniteUI/igniteui-cli/issues"
  },
  "main": "lib/cli.js",
  "scripts": {
    "build": "node ./node_modules/typescript/lib/tsc.js && npm run config-schema",
    "build-pack": "node ./node_modules/typescript/lib/tsc.js -p tsconfig-pack.json && npm run config-schema",
    "pretest": "npm run lint && npm run build",
    "test": "nyc npm run jasmine",
    "jasmine": "node spec/jasmine-runner.js",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "lint": "tslint --project tsconfig.json",
    "config-schema": "typescript-json-schema packages/core/types/Config.ts Config -o packages/core/config/Config.schema.json"
  },
  "files": [
    "ignite-ui-cli.txt",
    "bin/*",
    "lib/**/*.d.ts",
    "lib/**/*.js",
    "lib/config/defaults.json",
    "lib/config/Config.schema.json",
    "scripts/**/*.js",
    "templates/**/*.d.ts",
    "templates/**/*.js",
    "templates/**/files/**/*",
    "templates/**/generate/**/*",
    "templates/quickstart/**/*",
    "templates/**/*.json",
    "migrations/**/*.d.ts",
    "migrations/**/*.js",
    "migrations/**/*.json",
    "schematics/**/*.d.ts",
    "schematics/**/*.js",
    "schematics/**/*.json"
  ],
  "nyc": {
    "extension": [
      ".ts",
      ".tsx"
    ],
    "include": [
      "lib/"
    ],
    "exclude": [
      "**/*.d.ts",
      "output/",
      "templates/quickstart/",
      "templates/**/files/"
    ],
    "reporter": [
      "lcov",
      "text-summary"
    ],
    "require": [
      "ts-node/register"
    ],
    "instrument": true,
    "cache": false,
    "all": true
  },
  "dependencies": {
    "@igniteui/angular-templates": "~16.0.1205",
    "@igniteui/cli-core": "^12.0.5",
    "chalk": "^4.1.2",
    "fs-extra": "^11.1.1",
    "glob": "^7.2.0",
    "inquirer": "^9.0.2",
    "opn": "^6.0.0",
    "resolve": "^1.22.2",
    "through2": "^4.0.2",
    "typescript": "~4.5.2",
    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "@angular-devkit/core": "^16.1.5",
    "@angular-devkit/schematics": "^16.1.5",
    "@schematics/angular": "^16.1.5",
    "@types/fs-extra": "^11.0.1",
    "@types/jasmine": "^5.1.1",
    "@types/node": "^20.4.2",
    "browser-sync": "^2.29.3",
    "coveralls": "^3.1.1",
    "jasmine": "^5.1.0",
    "jasmine-spec-reporter": "^7.0.0",
    "lite-server": "^2.6.1",
    "nyc": "^15.1.0",
    "rxjs": "^7.8.1",
    "source-map-support": "^0.5.21",
    "ts-node": "^10.9.1",
    "tslint": "^6.1.3",
    "typescript-json-schema": "^0.59.0"
  },
  "ng-update": {
    "migrations": "./migrations/migration-collection.json",
    "packageGroup": [
      "igniteui-cli",
      "igniteui-angular",
      "@infragistics/igniteui-angular",
      "igniteui-angular-charts",
      "@igniteui/angular-templates"
    ]
  }
}
